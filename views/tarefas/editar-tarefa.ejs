<%- include('../includes/header')%>
<%- include('../includes/nav')%>

<main class="mb-4">
    <div class="bg-light p-4">
        <div class="container text-center">
            <h1>Editar Tarefa</h1>
        </div>
    </div>

    <div class="container container-fluid">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card my-5">
                    <form class="card-body cardbody-color px-lg-5" action="/tarefas/atualizar-tarefa" method="POST">
                        <a href="/"></a>
                        <div class="text-center">
                            <img src="/img/task-edit.png" class="img-fluid task-form-img my-3" alt="logo-tarefa">
                        </div>
    
                        <div class="my-3">
                            <label for="titulo" class="form-label">Nome da Tarefa</label>
                            <input type="text" id="titulo" name="titulo" class="form-control" autocomplete="off" value="<%= task.tarefa%>" required>
                        </div>
                        <div class="mb-3">
                            <label for="descricao" class="form-label">Descrição</label>
                            <textarea name="descricao" id="descricao" cols="30" rows="5" class="form-control" style="resize: none;" required><%= task.descricao %></textarea>
                        </div>
                
                        <input type="text" name="id" id="id-tarefa" value="<%= task.id_tarefa%>" readonly>
                        <div class="d-flex justify-content-center justify-content-sm-end mb-5">
                            <button type="submit" class="btn btn-success mx-1">Criar Tarefa</button>
                            <a href="/" class="btn btn-danger mx-1">Voltar</a>
                        </div>
                    </form>
                </div>
    
            </div>
        </div>
    </div>
</main>

<%- include('../includes/footer')%>